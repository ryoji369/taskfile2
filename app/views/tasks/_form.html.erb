<%= form_with model: task, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タスクの名称" %><br />
    <%= f.text_field :title, id:"task_title" %>
  </div>

  <div class="field">
    <%= f.label :description, "詳細" %><br />
    <%= f.text_area :description, class: :form__text, id:"task_description" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"task_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>